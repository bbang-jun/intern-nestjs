generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Summoner {
  puuid    String   @id @unique
  region   String
  gameName String
  tagLine  String
  matches  Match[]
}

model Match {
  matchId    String   @id
  userPuuid  String
  summoner   Summoner @relation(fields: [userPuuid], references: [puuid])
}